
@model StreamSafari.ViewModel.ViewModels.JobViewModel

@{

    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "CreateJob";
    bool IsJobAvailable = ViewBag.IsJobNameAvailable ?? false;

}

<h4>CreateMovie</h4>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-md-10">
                @Html.LabelFor(m => m.Name)
                @Html.TextBoxFor(m => m.Name)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                @Html.LabelFor(m => m.Status)
                @Html.TextBoxFor(m => m.Status)
            </div>
        </div>
      
        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Create" />
            </div>

        </div>


        @if (IsJobAvailable)
        {
            <div class="col-md-10">
                @Html.Label("Job Already Created")
            </div>
        }

    </div>
}


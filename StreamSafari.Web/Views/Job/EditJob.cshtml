@model StreamSafari.ViewModel.ViewModels.JobViewModel
@{

    ViewBag.Title = "Edit";
}

<h2>EditUser</h2>

@using (Html.BeginForm("Edit", "Job", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.JobId)
    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-md-10">
                @Html.LabelFor(m => m.Name)
                @Html.EditorFor(m => m.Name)
            </div>
            <div class="col-md-10">
                @Html.LabelFor(m  => m.Status)
                @Html.EditorFor(m => m.Status)
            </div>
            <div class="col-md-10">
                @Html.LabelFor(m => m.CreatedWhen)
                @Html.EditorFor(m => m.CreatedWhen)
            </div>
            <div class="col-md-10">
                @Html.LabelFor(m => m.UpdatedWhen)
                @Html.EditorFor(m => m.UpdatedWhen)
            </div>
         
        </div>


        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Save" />
            </div>
        </div>


    </div>
    <div>
        @Html.ActionLink("Back to List", "JobCreated")
    </div>
}